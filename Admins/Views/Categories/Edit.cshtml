@model DevXuongMoc.Models.Category

@{
    ViewData["Title"] = "Sửa";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center mb-4">Sửa</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <!-- Title -->
            <div class="form-group">
                <label asp-for="Title" class="control-label">Tiêu đề</label>
                <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Icon -->
            <div class="form-group">
                <label asp-for="Icon" class="control-label">Biểu tượng</label>
                <input asp-for="Icon" type="file" class="form-control" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>

            <!-- MateTitle -->
            <div class="form-group">
                <label asp-for="MateTitle" class="control-label">Tiêu đề con</label>
                <input asp-for="MateTitle" class="form-control" placeholder="Nhập tiêu đề con" />
                <span asp-validation-for="MateTitle" class="text-danger"></span>
            </div>

            <!-- Orders -->
            <div class="form-group">
                <label asp-for="Orders" class="control-label">Thứ tự</label>
                <input asp-for="Orders" type="number" class="form-control" placeholder="Nhập thứ tự" />
                <span asp-validation-for="Orders" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Lưu</button>
            </div>
        </form>
    </div>
</div>

<!-- Back to List Button -->
<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Trở lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
